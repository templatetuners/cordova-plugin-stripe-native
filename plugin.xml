<plugin id="cordova-plugin-stripe-native" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>StripePlugin</name>

  <!-- JavaScript interface -->
  <js-module src="www/stripe.js" name="StripePlugin">
    <clobbers target="StripePlugin" />
  </js-module>

  <!-- Android platform -->
  <platform name="android">
    <config-file parent="/*" target="AndroidManifest.xml" />

    <!-- Link to Stripe Android SDK -->
    <framework src="com.stripe:stripe-android:19.2.0" />

    <!-- Native Java class -->
    <source-file src="src/android/StripePlugin.java" target-dir="src/com/example/stripe" />

    <!-- Register native plugin -->
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="StripePlugin">
        <param name="android-package" value="com.example.stripe.StripePlugin" />
        <param name="onload" value="true" />
      </feature>
    </config-file>
  </platform>
</plugin>
